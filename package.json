{
  "name": "http-client-electron",
  "private": true,
  "version": "1.0.0",
  "description": "Modern HTTP Client built with Electron and React",
  "author": "felipemaifredo",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "tsc && vite build",
    "start": "npm run build && electron .",
    "make": "npm run build && electron-builder",
    "make:linux": "npm run build && electron-builder --linux",
    "make:win": "npm run build && electron-builder --win",
    "make:mac": "npm run build && electron-builder --mac"
  },
  "build": {
    "appId": "com.httpclient.app",
    "productName": "HTTP Client",
    "directories": {
      "output": "dist-installer"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "src/resourses/logo.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "src/resourses/logo.png"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "src/resourses/logo.png",
      "category": "Network"
    }
  },
  "dependencies": {
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  }
}